<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,
    initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link href="~/Content/css/materialize.min.css" rel="stylesheet"
          type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet"
          type="text/css" />
    <script type="text/javascript"
            src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="~/Content/js/materialize.min.js"></script>
</head>

<body>
    <nav>
        <div class="nav-wrapper teal">
            <div class="container">
                <a class="brand-logo" href="/Movies/Index"> JD Movies</a>               
                <ul id="nav-mobile" class="right">
                    @Html.ActionLink("Dodaj film","Create")                                   
                </ul>
            </div>
        </div>
    </nav>

    <div class="table-responsive">
        <div class="row">
            <div class="container">
                @RenderBody()
            </div>

        </div>
    </div>
    

    <footer class="page-footer teal">     

        <div class="footer-copyright">
            <div class="container">
                &copy;2018 - Daniel Jabłoński s15843                
                <a class="grey-text text-lighten-4 right"
                   href="/JDs/Index">O stronie</a>
            </div>

        </div>
    </footer>
    
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>

</html>